<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D4AA"
    tools:context=".Calculator1"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="-78dp">

    <Button
        android:id="@+id/bt_addition"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_subtraction" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/bt_decimal"
        app:layout_constraintTop_toBottomOf="@+id/bt_three" />

    <Button
        android:id="@+id/bt_decimal"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/bt_zero"
        app:layout_constraintTop_toBottomOf="@+id/bt_two" />

    <Button
        android:id="@+id/bt_subtraction"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="18dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_multiplication" />

    <Button
        android:id="@+id/bt_three"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/bt_decimal"
        app:layout_constraintTop_toBottomOf="@+id/bt_six" />

    <Button
        android:id="@+id/bt_two"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/bt_one"
        app:layout_constraintTop_toBottomOf="@+id/bt_five" />

    <Button
        android:id="@+id/bt_multiplication"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="18dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_division" />

    <Button
        android:id="@+id/bt_six"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/bt_five"
        app:layout_constraintTop_toBottomOf="@+id/bt_nine" />

    <Button
        android:id="@+id/bt_five"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/bt_four"
        app:layout_constraintTop_toBottomOf="@+id/bt_eight" />

    <Button
        android:id="@+id/bt_eight"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/bt_seven"
        app:layout_constraintTop_toBottomOf="@+id/bt_ac" />

    <Button
        android:id="@+id/bt_nine"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/bt_eight"
        app:layout_constraintTop_toBottomOf="@+id/bt_menu" />

    <Button
        android:id="@+id/bt_division"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_menu" />

    <Button
        android:id="@+id/bt_one"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="3dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_four" />

    <Button
        android:id="@+id/bt_zero"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="3dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_one" />

    <Button
        android:id="@+id/bt_four"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="3dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_seven" />

    <Button
        android:id="@+id/bt_menu"
        android:layout_width="183dp"
        android:layout_height="89dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="main menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvv_answer" />

    <Button
        android:id="@+id/bt_ac"
        android:layout_width="183dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:text="ac"
        app:layout_constraintEnd_toStartOf="@+id/bt_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvv_answer" />

    <TextView
        android:id="@+id/tvv_equation"
        android:layout_width="373dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:text=""
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvv_answer"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="18dp"
        android:gravity="right"
        android:textColor="@color/white"
        android:text=""
        android:layout_gravity="end"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvv_equation" />

    <Button
        android:id="@+id/bt_seven"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="5dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_ac" />

</androidx.constraintlayout.widget.ConstraintLayout>